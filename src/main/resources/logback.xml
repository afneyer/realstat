<?xml version="1.0"?>
<configuration>
<appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/logfile.log</file>
        <append>true</append>
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg %n</pattern>
        </encoder>
    </appender>

    
    <appender name="IMPORT" class="ch.qos.logback.core.FileAppender">
        <file>logs/import.log</file>
        <append>true</append>
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg %n</pattern>
        </encoder>
    </appender>
    <!-- additivity=false ensures import data only goes to the import log -->
    <logger name="import" level="WARN" additivity="false">
        <appender-ref ref="IMPORT"/>
    </logger>
    <root>
        <appender-ref ref="FILE"/>
    </root>
</configuration>